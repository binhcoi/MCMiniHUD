  "authors": [
    "binhcoi"
  ],
  "contact": {
    "homepage": "https://binhcoi.com/",
    "sources": "https://github.com/binhcoi/MCMiniHUD"
  },

  "license": "CC0-1.0",
  "icon": "assets/binhcoiminihud/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.binhcoi.mcmods.binhcoiminihud.MiniHudMod"
    ]
  },
  "mixins": [
    "binhcoiminihud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "another-mod": "*"
